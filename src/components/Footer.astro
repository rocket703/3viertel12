<style>
  .footer {
    background: #050505;
    color: #888;
    padding: 5rem 1.5rem 3rem;
    position: relative;
    overflow: hidden;
    border-top: 4px solid #cc0000;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
    align-items: start;
  }

  /* --- HEADINGS (BEBAS STYLE) --- */
  .footer-heading {
    font-family: 'Bebas Neue', sans-serif;
    color: #fff;
    font-size: 1.8rem;
    letter-spacing: 2px;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
  }

  /* --- SOCIAL ICONS (ECKIG & ROT) --- */
  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-icon-box {
    color: #fff;
    background: #111;
    border: 2px solid #222;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s steps(3);
    /* Der eckige Look aus dem Button-Design */
    clip-path: polygon(10% 0, 100% 0, 90% 100%, 0% 100%);
  }

  .social-icon-box:hover {
    background: #cc0000;
    border-color: #fff;
    transform: scale(1.1) rotate(-3deg);
  }

  /* --- COPYRIGHT & MINI LOGO --- */
  .mini-logo {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2rem;
    color: #fff;
    margin-bottom: 1rem;
    letter-spacing: 1px;
  }

  .mini-logo span {
    color: #cc0000;
    margin-left: 5px;
  }

  .copyright p {
    font-size: 0.75rem;
    letter-spacing: 1px;
    margin: 0.5rem 0;
    font-weight: 700;
    text-transform: uppercase;
  }

  .design-credit {
    color: #444;
  }

  .design-credit a {
    color: #666;
    text-decoration: none;
    transition: color 0.3s;
  }

  .design-credit a:hover {
    color: #cc0000;
  }

  /* --- LEGAL LIST (CLEAN) --- */
  .legal-list {
    list-style: none !important;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .legal-list a {
    color: #888;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 700;
    letter-spacing: 1px;
    transition: color 0.2s;
  }

  .legal-list a:hover {
    color: #fff;
    padding-left: 5px; /* Kleiner Slide-Effekt */
  }

  /* Noise Overlay für Textur */
  .noise {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background: url('https://www.transparenttextures.com/patterns/asfalt-dark.png');
    opacity: 0.2;
    pointer-events: none;
    z-index: 1;
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 900px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 4rem;
    }
    .footer-section {
      align-items: center;
    }
    .social-links {
      justify-content: center;
    }
    .legal-list {
      align-items: center;
    }
  }
</style>