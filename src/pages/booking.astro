---
import Layout from '../layouts/Layout.astro';
import gigsData from '../data/gigs.json';

const occupiedDates = gigsData.map(gig => gig.date);
const today = new Date().toISOString().split('T')[0];
---

<Layout title="Booking | 3/4ZWÖÖÖLWE">
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">

  <section class="booking-section">
    <div class="booking-bg">
      <img 
        src="https://images.unsplash.com/photo-1459749411177-042180ce673c?q=80&w=2000&auto=format&fit=crop" 
        alt="Background" 
        class="bg-image"
      />
      <div class="booking-overlay"></div>
    </div>

    <div class="container booking-content">
      <div class="band-name-wrapper">
        <span class="red-badge">Jetzt</span>
        <h1 class="white-rock-style">BUCHEN</h1>
      </div>
      <p class="snappy-text">KEINE AUSREDEN. HOL DIR DEN SOUND AUF DEINE BÜHNE.</p>

      <div class="form-wrapper">
        <form id="booking-form">
          <input type="hidden" name="access_key" value="caf048fb-950a-49a3-a2a6-1123afbfa973" />
          <input type="hidden" name="subject" value="Neue Buchungsanfrage" />
          <input type="hidden" name="from_name" value="3/4ZWÖÖÖLWE Website" />
          <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

          <div class="form-grid">
            <div class="input-group">
              <input type="text" name="vorname" id="vorname" required placeholder="Vorname*" />
            </div>

            <div class="input-group">
              <input type="text" name="nachname" id="nachname" required placeholder="Nachname*" />
            </div>

            <div class="input-group">
              <input type="email" name="email" id="email" required placeholder="Email@beispiel.de*" />
            </div>

            <div class="input-group">
              <input type="tel" name="tel" id="tel" placeholder="Telefon (optional)" />
            </div>

            <div class="input-group full-width">
              <label for="date" class="date-label"></label>
              <input type="date" name="date" id="date" required min={today} />
              <p id="date-error" class="error-msg">Dieses Datum ist bereits belegt! Schreib uns eine Nachricht und wir sehen, ob wir eine Lösung finden.</p>
            </div>

            <div class="input-group full-width">
              <textarea name="message" id="message" rows="4" placeholder="Erzähl uns möglichst genau was du vor hast, damit wir dir ein Angebot machen können."></textarea>
            </div>
          </div>

          <div class="btn-container">
            <button type="submit" id="submit-btn" class="ticket-btn rock-btn large-btn">
              Anfrage abschicken
            </button>
          </div>
        </form>
      </div>
    </div>

    <div id="success-popup" class="popup-overlay">
      <div class="popup-content">
        <h2 class="white-rock-style small">DANKE!</h2>
        <p class="snappy-text">Deine Anfrage ist gesendet. Wir melden uns innerhalb von 24 Stunden.</p>
        <button id="close-popup" class="ticket-btn rock-btn">ZURÜCK</button>
      </div>
    </div>
    <div class="noise"></div>
  </section>
</Layout>

<script define:vars={{ occupiedDates }}>
  const form = document.getElementById('booking-form');
  const dateInput = document.getElementById('date');
  const dateError = document.getElementById('date-error');
  const popup = document.getElementById('success-popup');
  const closePopup = document.getElementById('close-popup');
  const submitBtn = document.getElementById('submit-btn');

  dateInput.addEventListener('change', (e) => {
    if (occupiedDates.includes(e.target.value)) {
      dateError.style.opacity = '1';
      dateInput.value = '';
    } else {
      dateError.style.opacity = '0';
    }
  });

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    submitBtn.innerText = "SENDE...";
    submitBtn.disabled = true;

    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    try {
      const response = await fetch('https://api.web3forms.com/submit', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
        body: json
      });
      
      if (response.status === 200) {
        popup.classList.add('active');
        form.reset();
      } else {
        alert("FEHLER BEIM SENDEN.");
      }
    } catch (error) {
      alert("ETWAS IST SCHIEFGELAUFEN.");
    } finally {
      submitBtn.innerText = "ANFRAGE ABSCHICKEN";
      submitBtn.disabled = false;
    }
  });

  closePopup.addEventListener('click', () => {
    popup.classList.remove('active');
  });
</script>

<style>
  /* --- BACKGROUND & OVERLAY --- */
  .booking-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    padding: 8rem 1rem 4rem 1rem;
    background: #000;
  }

  .booking-bg { position: absolute; inset: 0; z-index: 1; }
  .bg-image { 
    width: 100%; height: 100%; object-fit: cover; 
    filter: grayscale(1) brightness(0.2) contrast(1.1);
  }
  .booking-overlay { 
    position: absolute; inset: 0; 
    background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.9)); z-index: 2;
  }

  .booking-content { position: relative; z-index: 10; width: 100%; max-width: 900px; text-align: center; }

  /* --- TYPO --- */
  .band-name-wrapper { position: relative; transform: rotate(-3deg); display: inline-block; margin-bottom: 1rem; }
  
  .red-badge {
    position: absolute; top: -40px; left: -25px; background: #cc0000; color: #fff;
    padding: 0.2rem 1rem; font-family: 'Bebas Neue', sans-serif; font-weight: 900;
    font-size: 2.5rem; z-index: 12; transform: rotate(-5deg);
    clip-path: polygon(5% 0%, 100% 0%, 95% 100%, 0% 100%);
  }

  .white-rock-style { 
    display: block; font-size: clamp(3.5rem, 12vw, 8rem); color: #fff; 
    font-family: 'Bebas Neue', sans-serif; line-height: 0.8;
    text-shadow: 0.04em 0.04em 0px #cc0000; letter-spacing: -1px;
  }

  .snappy-text { color: #fff; font-size: 1.1rem; letter-spacing: 2px; font-weight: bold; text-transform: uppercase; margin-bottom: 3rem; }

  /* --- FORM STYLES --- */
  .form-wrapper {
    background: rgba(17, 17, 17, 0.8);
    backdrop-filter: blur(10px);
    padding: 3rem;
    border: 2px solid #333;
    border-top: 5px solid #cc0000;
    text-align: left;
  }

  .form-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; }
  .full-width { grid-column: span 2; }

  .input-group { display: flex; flex-direction: column; }

  input, textarea {
    background: #000;
    border: 2px solid #333;
    padding: 1.2rem;
    color: #fff;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.2rem;
    letter-spacing: 1px;
    transition: all 0.3s;
  }

  input:focus, textarea:focus {
    border-color: #cc0000;
    outline: none;
    box-shadow: 0 0 10px rgba(204, 0, 0, 0.3);
  }

  .date-label {
    font-family: 'Bebas Neue', sans-serif;
    color: #cc0000;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  /* --- BUTTON --- */
  .btn-container { margin-top: 2rem; display: flex; justify-content: center; }
  
  .ticket-btn.rock-btn {
    background: #cc0000; color: white; border: none; padding: 1.2rem 3rem;
    font-family: 'Bebas Neue', sans-serif; font-size: 1.5rem; cursor: pointer;
    clip-path: polygon(5% 0%, 100% 0%, 95% 100%, 0% 100%);
    transition: 0.3s;
  }

  .ticket-btn.rock-btn:hover { background: #fff; color: #cc0000; transform: scale(1.05); }

  .error-msg { color: #cc0000; font-family: 'Bebas Neue', sans-serif; font-size: 0.9rem; opacity: 0; margin-top: 5px; }

  @media (max-width: 768px) {
  .ticket-btn.rock-btn {
    padding: 0.8rem 1.8rem;   /* weniger Innenabstand */
    font-size: 1.1rem;        /* kleinere Schrift */
  }

  .btn-container {
    margin-top: 1.2rem;       /* optional weniger Abstand oben */
  }
}

  /* --- POPUP --- */
  .popup-overlay {
    position: fixed; inset: 0; background: rgba(0,0,0,0.95);
    display: flex; align-items: center; justify-content: center; z-index: 1000;
    opacity: 0; pointer-events: none; transition: 0.4s;
  }
  .popup-overlay.active { opacity: 1; pointer-events: auto; }
  .popup-content { 
    background: #111; padding: 4rem; text-align: center; border: 4px solid #cc0000; 
    max-width: 500px; transform: rotate(-1deg);
  }
  .white-rock-style.small { font-size: 4rem; margin-bottom: 1rem; }

  .noise { position: absolute; inset: 0; background: url('https://www.transparenttextures.com/patterns/asfalt-dark.png'); opacity: 0.1; pointer-events: none; z-index: 15; }

  @media (max-width: 768px) {
    .form-grid { grid-template-columns: 1fr; }
    .full-width { grid-column: span 1; }
    .form-wrapper { padding: 1.5rem; }
    .red-badge { font-size: 1.8rem; left: -10px; }
  }
</style>