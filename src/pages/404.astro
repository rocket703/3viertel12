---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 | 3/4ZWÖÖÖLWE">
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">

  <section class="error-section">
    <div class="bg-container">
      <img 
        src="https://cdn.pixabay.com/photo/2014/10/26/14/36/light-bulb-503881_1280.jpg" 
        alt="Background" 
        class="bg-image"
      />
      <div class="bg-overlay"></div>
    </div>

    <div class="content-wrapper">
      <div class="band-name-wrapper">
        <span class="red-badge">OOPS!</span>
        <h1 class="white-rock-style">404</h1>
      </div>
      <p class="snappy-text">OH, DA IST DIR WOHL EINE SAITE GERISSEN.</p>

      <div class="btn-container">
        <a href={`${import.meta.env.BASE_URL}/`} class="ticket-btn rock-btn">ZURÜCK ZUR BÜHNE</a>
      </div>
    </div>

    <div class="noise"></div>
  </section>
</Layout>

<style>
  .error-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background: #000;
  }

  /* Hintergrund-Fix */
  .bg-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1; /* Ganz unten */
  }

  .bg-image { 
    width: 100%; 
    height: 100%; 
    object-fit: cover; 
    filter: grayscale(1) brightness(0.2) contrast(1.1);
  }

  .bg-overlay { 
    position: absolute; 
    inset: 0; 
    background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.2)); 
    z-index: 2;
  }

  /* Content-Fix: Z-Index zwingt alles nach vorne */
  .content-wrapper {
    position: relative;
    z-index: 10; 
    text-align: center;
    padding: 2rem;
    width: 100%;
  }

  .band-name-wrapper { 
    position: relative; 
    transform: rotate(-3deg); 
    display: inline-block; 
    margin-bottom: 3rem; /* Mehr Platz für den Badge */
  }
  
  .red-badge {
    position: absolute; 
    top: -70px; /* Schön weit oben */
    left: -15px; 
    background: #cc0000; 
    color: #fff;
    padding: 0.3rem 1.2rem; 
    font-family: 'Bebas Neue', sans-serif; 
    font-weight: 900;
    font-size: 2.5rem; 
    z-index: 15; 
    transform: rotate(-5deg);
    clip-path: polygon(5% 0%, 100% 0%, 95% 100%, 0% 100%);
    box-shadow: 5px 5px 15px rgba(0,0,0,0.5);
  }

  .white-rock-style { 
    display: block; 
    font-size: clamp(6rem, 20vw, 12rem); 
    color: #fff; 
    font-family: 'Bebas Neue', sans-serif; 
    line-height: 0.8;
    text-shadow: 0.04em 0.04em 0px #cc0000; 
    letter-spacing: -1px;
    margin: 0;
  }

  .snappy-text { 
    color: #fff; 
    font-size: 1.1rem; 
    letter-spacing: 2px; 
    font-weight: bold; 
    text-transform: uppercase; 
    margin-bottom: 3rem;
  }

  .ticket-btn.rock-btn {
    background: #cc0000; 
    color: white; 
    border: none; 
    padding: 1rem 2.5rem;
    font-family: 'Bebas Neue', sans-serif; 
    font-size: 1.4rem; 
    cursor: pointer;
    clip-path: polygon(5% 0%, 100% 0%, 95% 100%, 0% 100%);
    transition: 0.3s;
    text-decoration: none;
    display: inline-block;
  }

  .ticket-btn.rock-btn:hover { background: #fff; color: #cc0000; transform: scale(1.05); }

  /* Mobile Fixes */
  @media (max-width: 768px) {
    .red-badge { 
      top: -50px; 
      font-size: 1.8rem; 
    }
    .ticket-btn.rock-btn {
      padding: 0.7rem 1.8rem;
      font-size: 1.1rem;
    }
  }
</style>